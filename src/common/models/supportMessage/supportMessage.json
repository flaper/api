{
  "name": "SupportMessage",
  "base": "CommonModel",
  "idInjection": true,
  "strict": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "status": {
      "type": "string",
      "default": "active",
      "required": true
    },
    "fromId": {
      "type": "string",
      "required": true
    },
    "toId": {
      "type": "string",
      "required": true
    },
    "dialog": {
      "type": "string",
      "required": true
    },
    "message": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "postMessage",
        "getDialog"
      ]
    },
    {
      "principalType": "ROLE",
      "principalId": "sales",
      "permission": "ALLOW",
      "property": [
        "getDialogs"
      ]
    }
  ],
  "methods": {},
  "indexes": {
    "dialog_status_created_index": {
      "dialog": 1,
      "status": 1,
      "created": -1
    }
  },
  "scope": {
    "order": "created DESC",
    "status": "active"
  }
}
