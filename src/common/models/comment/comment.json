{
  "name": "Comment",
  "base": "CommonModel",
  "idInjection": true,
  "strict": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "Likable": {}
  },
  "properties": {
    "status": {
      "type": "string",
      "default": "active",
      "required": true
    },
    "content": {
      "type": "string",
      "required": true
    },
    "contentHTML": {
      "type": "string"
    },
    "shortInline": {
      "type": "string"
    },
    "subjectId": {
      "type": "ObjectId",
      "required": true
    },
    "subjectType": {
      "type": "string",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "user"
    },
    "subject": {
      "type": "belongsTo",
      "polymorphic": true
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "create"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "WRITE",
      "principalType": "ROLE",
      "principalId": "super",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW",
      "property": "customDeleteById"
    }
  ],
  "scopes": {
    "scopeActive": {
      "where": {
        "status": "active"
      }
    }
  },
  "methods": {},
  "indexes": {
    "subjectId_status_created_index": {
      "subjectId": 1,
      "status": 1,
      "created": -1
    },
    "userId_status_created_index": {
      "userId": 1,
      "status": 1,
      "created": -1
    }
  },
  "scope": {
    "order": "created DESC"
  }
}
