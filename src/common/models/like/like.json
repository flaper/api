{
  "name": "Like",
  "base": "CommonModel",
  "idInjection": false,
  "strict": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "userId": {
      "type": "ObjectId",
      "required": true
    },
    "subjectId": {
      "type": "ObjectId",
      "required": true
    },
    "subjectType": {
      "type": "string",
      "required": true
    },
    "updated": false
  },
  "hidden": {
    "id": true
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "user"
    },
    "subject": {
      "type": "belongsTo",
      "polymorphic": true
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": "actionCreate"
    }
  ],
  "methods": {
  },
  "indexes": {
    "subjectId_index": {
      "subjectId": 1
    },
    "userId_subjectType_created_index": {
      "userId": 1,
      "subjectType": 1,
      "created": -1
    },
    "userId_subjectId_unique_index": {
      "keys": {
        "subjectId": 1,
        "userId": 1
      },
      "options": {
        "unique": true
      }
    }
  }
}
