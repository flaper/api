{
  "name": "user",
  "base": "User",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "displayName": {
      "type": "string"
    },
    "photo": {
      "type": "string"
    },
    "photoLarge": {
      "type": "string"
    },
    "storiesNumber": {
      "type": "number",
      "default": 0
    },
    "likesNumber": {
      "type": "number",
      "default": 0
    },
    "created": {
      "type": "date"
    },
    "updated": {
      "type": "date"
    }
  },
  "hidden": [
    "email"
  ],
  "validations": [],
  "relations": {
    "roles": {
      "type": "hasMany",
      "model": "role",
      "foreignKey": "principalId",
      "through": "RoleMapping"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": [
        "find",
        "findById",
        "findOne",
        "count",
        "exists",
        "getRoles",
        "__count__roles",
        "getSettings",
        "getIdentities"
      ]
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "addObject",
        "removeObject"
      ]
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY",
      "property": [
        "create",
        "updateAttributes"
      ]
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW",
      "property": [
        "saveSettings",
        "getExtra",
        "getObjectsIds"
      ]
    },
    {
      "principalType": "ROLE",
      "principalId": "sales",
      "permission": "ALLOW",
      "property": [
        "getObjectsIds"
      ]
    },
    {
      "principalType": "ROLE",
      "principalId": "super",
      "permission": "ALLOW",
      "property": [
        "create",
        "updateAttributes",
        "__delete__roles",
        "getExtra",
        "setRole"
      ]
    }
  ],
  "scope": {
    "limit": 100
  },
  "methods": {},
  "indexes": {
    "email_index": {
      "email": 1
    },
    "created_index": {
      "created": -1
    }
  }
}
